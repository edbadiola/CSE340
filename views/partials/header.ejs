<header>
    <div class="logo">
        <img src="/images/site/favicon-32x32.png" alt="CSE Motors Logo">CSE Motors
    </div>
    <div class="account">
        <% if (locals.accountData) { %>
            <!-- User is logged in -->
            <a href="/account">Welcome <%= accountData.account_firstname %></a>
            <a href="/logout">Logout</a>
            <% } else { %>
                <!-- User not logged in -->
                <a href="/account/login">My Account</a>
                <% } %>
    </div>
</header>